root                     = true

[*]
insert_final_newline     = true
trim_trailing_whitespace = true
end_of_line              = lf
charset                  = utf-8

[*.lua]
indent_style             = space
indent_size              = 3

[*.tl]
indent_style             = space
indent_size              = 3

[Makefile]
indent_style             = tab

[*.bat]
end_of_line = crlf