root                     = true

[*]
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
charset                  = utf-8

[{*.lua,*.rockspec,.luacheckrc}]
indent_style             = space
indent_size              = 4

[Makefile]
indent_style             = tab
indent_size              = 4

[*.html]
indent_style             = space
indent_size              = 4

[*.{c,h}]
indent_style             = space
indent_size              = 4
